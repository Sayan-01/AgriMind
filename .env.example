# AgriMind Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED ENVIRONMENT VARIABLES
# ===========================================

# Gemini AI API Key (Required for LLM functionality)
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# OPTIONAL ENVIRONMENT VARIABLES
# ===========================================

# Database Configuration (Docker Compose setup)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=agrimind
POSTGRES_PASSWORD=agrimind
POSTGRES_DB=agrimind
DATABASE_URL=postgresql://agrimind:agrimind@db:5432/agrimind
# Alternative for local development: DATABASE_URL=sqlite:///./agrimind.db

# Redis Configuration (Docker Compose setup)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0
# Alternative for local development: REDIS_URL=redis://localhost:6379/0

# Additional AI Service Keys
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# ML Experiment Tracking
WANDB_API_KEY=your_wandb_api_key_here

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server settings
PORT=8000
HOST=0.0.0.0
WORKERS=1
LOG_LEVEL=info

# CORS and Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
SECRET_KEY=your_secret_key_here_change_in_production

# ===========================================
# APPLICATION SPECIFIC SETTINGS
# ===========================================

# File upload limits (in MB)
MAX_FILE_SIZE=10
MAX_FILES_PER_REQUEST=5

# Model settings
DEFAULT_MODEL=gemini-pro
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Data directories (inside container)
DATA_DIR=/app/data
MODEL_DIR=/app/models
UPLOAD_DIR=/app/uploads
LOG_DIR=/app/logs

# ===========================================
# DOCKER COMPOSE CONFIGURATION
# ===========================================

# Application Configuration
ENVIRONMENT=production
API_PORT=8000
LOG_LEVEL=INFO

# Security Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug mode (set to false in production)
DEBUG=false
DEVELOPMENT=false

# Logging
LOG_FORMAT=json
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
